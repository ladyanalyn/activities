#include <iostream>
using namespace std;

float num1, num2, num3, num4, num5, num6, num7, num8;
float ave;

int main () {
    cout << "Enter your grade in Language: ";
    cin >> num1;
    cout << " Enter your grade in Filipino: ";
    cin >> num2;
    cout << " Enter your grade in Communication: ";
    cin >> num3;
    cout << " Enter your grade in Math: ";
    cin >> num4;
    cout << " Enter your grade in Science: ";
    cin >> num5;
    cout << " Enter your grade in English: ";
    cin >> num6;
    cout << " Enter your grade in Philosophy: ";
    cin >> num7;
    cout << " Enter your grade in PE: ";
    cin >> num8;
    
    ave = (num1 + num2 + num3 + num4 + num5 + num6 + num7 + num8) / 8;
    
    if (ave >= 90) {
        cout << ave << " Excellent ";
    }
    else if (ave >= 80) {
        cout << ave << " Very Good ";
    }
    else if (ave >= 70) {
        cout << ave << " Good ";
    }
    else if (ave >= 60) {
        cout << ave << " Needs Improvement ";
    }
    else if (ave <60) {
        cout << ave << " Failing Grade ";
    }
    
    return 0;
}
