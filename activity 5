#include <iostream>
using namespace std;

int main () {
    int num1, num2;
    char ope;
    
    cout << "Enter first number: ";
    cin >> num1;
    cout << "Enter second number: ";
    cin >> num2;
    cout << "Enter operator (+, -, *, /): ";
    cin >> ope;
    
    switch (ope){
        case '+':
           cout << num1 << " + " << num2 << " = " << num1 + num2 << endl;
           break;
        case '-':
           cout << num1 << " - " << num2 << " = " << num1 - num2 << endl;
           break;
        case '*':
           cout << num1 << " * " << num2 << " = " << num1 * num2 << endl;
           break;
        case '/':
           cout << num1 << " / " << num2 << " = " << num1 / num2 << endl;
           break;
        default:
           cout << "Invalid operator";
           
    }
    
    return 0;
}
